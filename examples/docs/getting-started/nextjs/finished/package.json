{
  "name": "my-uniform-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run download:manifest && next dev",
    "build": "npm run download:manifest && next build",
    "download:manifest": "uniform context manifest download --output ./contextManifest.json",
    "uniform:pull:signals": "uniform context signal pull ./uniform/signals",
    "uniform:pull:components": "uniform canvas component pull ./uniform/components",
    "uniform:pull:compositions": "uniform canvas composition pull ./uniform/compositions",
    "uniform:pull": "run-s uniform:pull:signals uniform:pull:components uniform:pull:compositions",
    "uniform:push:signals": "uniform context signal push ./uniform/signals",
    "uniform:push:components": "uniform canvas component push ./uniform/components",
    "uniform:push:compositions": "uniform canvas composition push ./uniform/compositions",
    "uniform:publish": "uniform canvas composition push ./uniform/compositions --state published",
    "uniform:push": "run-s uniform:push:signals uniform:push:components uniform:push:compositions",
    "start": "next start"
  },
  "dependencies": {
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
