  "category": "analytics",
  "baseLocationUrl": "http://localhost:9000",
  "scopes": ["user:read"],
  "locations": {
    "install": {
      "description": [
        "Describe your mesh integration",
        "Each array element will create a new paragraph on the install dialog.",
        "<html> is not allowed."
