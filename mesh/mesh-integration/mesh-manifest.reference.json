            "ptNested": {
              "url": "../nestedNamedDialog"
            }
          },
          "configureUrl": "/reference/paramTypeConfig",
          "configurationLocations": {
            "ptConfigure": {
              "url": "../namedDialog"
            }
          },
          "renderableInPropertyPanel": true
